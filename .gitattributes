# Auto detect text files and perform LF normalization
* text=auto

# Force LF for source code
*.js text eol=lf
*.mjs text eol=lf
*.cjs text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.md text eol=lf

# SCSS/CSS files
*.scss text eol=lf
*.css text eol=lf

# Shell scripts
*.sh text eol=lf

# Batch files (Windows)
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
