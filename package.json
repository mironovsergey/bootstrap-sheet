{
  "name": "bootstrap-sheet",
  "version": "0.1.0",
  "description": "A touch-friendly bottom sheet component for Bootstrap 5",
  "main": "dist/js/bootstrap-sheet.js",
  "module": "dist/js/bootstrap-sheet.esm.js",
  "unpkg": "dist/js/bootstrap-sheet.min.js",
  "style": "dist/css/bootstrap-sheet.css",
  "sass": "src/scss/bootstrap-sheet.scss",
  "types": "src/types/index.d.ts",
  "type": "module",
  "files": [
    "dist/",
    "src/",
    "LICENSE",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./src/types/index.d.ts",
      "import": "./dist/js/bootstrap-sheet.esm.js",
      "require": "./dist/js/bootstrap-sheet.js",
      "default": "./dist/js/bootstrap-sheet.js"
    },
    "./dist/css/*": "./dist/css/*",
    "./src/scss/*": "./src/scss/*"
  },
  "sideEffects": [
    "*.css",
    "*.scss"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev:*\"",
    "dev:js": "rollup -c -w",
    "dev:css": "sass src/scss/bootstrap-sheet.scss dist/css/bootstrap-sheet.css --watch",
    "dev:server": "http-server . -c-1 -o /docs/",
    "build": "npm run clean && npm run build:js && npm run build:css",
    "build:js": "rollup -c",
    "build:css": "npm run build:css:main && npm run build:css:min",
    "build:css:main": "sass src/scss/bootstrap-sheet.scss dist/css/bootstrap-sheet.css --style=expanded",
    "build:css:min": "sass src/scss/bootstrap-sheet.scss dist/css/bootstrap-sheet.min.css --style=compressed",
    "clean": "rimraf dist coverage",
    "test": "npm run test:unit",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:unit:coverage": "jest --coverage",
    "test:unit:verbose": "jest --verbose",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{js,scss}\" \"tests/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.{js,scss}\" \"tests/**/*.js\"",
    "prepublishOnly": "npm run build && npm run test:unit",
    "prepare": "husky",
    "version": "npm run version:update && git add -A",
    "version:update": "node scripts/update-version.js",
    "release": "npm version patch && npm publish",
    "release:minor": "npm version minor && npm publish",
    "release:major": "npm version major && npm publish"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "jest --bail --findRelatedTests --passWithNoTests"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.{css,scss}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mironovsergey/bootstrap-sheet.git"
  },
  "keywords": [
    "bootstrap",
    "bootstrap5",
    "bottom-sheet",
    "action-sheet",
    "modal",
    "drawer",
    "mobile",
    "touch",
    "gestures",
    "component",
    "ui",
    "accessibility",
    "a11y",
    "responsive",
    "javascript",
    "css",
    "scss",
    "sass"
  ],
  "author": "Sergey Mironov <sergeymironov@protonmail.com>",
  "funding": "https://github.com/sponsors/mironovsergey",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mironovsergey/bootstrap-sheet/issues"
  },
  "homepage": "https://github.com/mironovsergey/bootstrap-sheet#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "peerDependencies": {
    "bootstrap": "^5.0.0"
  },
  "peerDependenciesMeta": {
    "bootstrap": {
      "optional": true
    }
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.36.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "babel-jest": "^30.2.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.36.0",
    "globals": "^16.4.0",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "lint-staged": "^16.2.4",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "rollup": "^4.52.0",
    "sass": "^1.93.0"
  },
  "engines": {
    "node": ">=22.20.0",
    "npm": ">=11.6.2"
  }
}
